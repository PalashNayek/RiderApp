<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

<!--    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/ic_menu_icon" />-->

    <ImageView
        android:id="@+id/img_send_riders"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/sendcar_change" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"
        app:fontFamily="@font/quicksand_light" />

    <TextView
        android:id="@+id/text_location_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:textSize="16sp"
        android:visibility="gone"
        app:fontFamily="@font/quicksand_light" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="245dp"
        android:background="@drawable/edit_text"
        android:elevation="12dp"
        android:hint="Number of Riders?"
        android:paddingLeft="20dp"
        android:src="@drawable/edittext_shadow"
        android:textColor="#534f4f"
        android:textColorHint="#cd151414"
        app:fontFamily="@font/montserrat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="126dp"
        android:orientation="horizontal"/>

    <EditText
        android:id="@+id/destination"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text"
        android:elevation="12dp"
        android:focusable="false"
        android:hint="Destination?"
        android:paddingLeft="20dp"
        android:src="@drawable/edittext_shadow"
        android:textColor="#534f4f"
        android:textColorHint="#cd151414"
        app:fontFamily="@font/quicksand_light" />

    <EditText
        android:id="@+id/confirmTripEdit"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/img_send_riders"
        android:layout_alignTop="@+id/destination"
        android:layout_weight="1"
        android:background="@drawable/edit_text"
        android:drawableRight="@drawable/calendar2"
        android:elevation="12dp"
        android:focusable="false"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6.5dp"
        android:src="@drawable/edittext_shadow"
        android:textColorHint="#ffffff"
        app:fontFamily="@font/quicksand_light" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/img_send_riders"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="13dp"
        android:src="@drawable/location_track" />

</RelativeLayout>