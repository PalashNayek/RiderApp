                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="61dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:elevation="12dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Destination?"
                android:paddingLeft="20dp"
                android:src="@drawable/edittext_shadow"
                android:textColor="#534f4f"
                android:textColorHint="#cd151414"
                app:fontFamily="@font/quicksand_light" />

            <EditText
                android:id="@+id/confirmTripEdit"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/destination"
                android:layout_alignEnd="@+id/img_send_riders"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:drawableRight="@drawable/calendar2"
                android:elevation="12dp"
                android:focusable="false"
                android:paddingLeft="15dp"
                android:paddingTop="6.5dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:src="@drawable/edittext_shadow"
