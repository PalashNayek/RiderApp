<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="driver.DocumentsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/arrow"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Documents"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please upload legible images of the following documents to complete the sign up process. Once verified, you will received an email concerning your account status."
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="@font/quicksand"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#bfbfbfbf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/textviewback"
                android:text="Driver License"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/front"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/quicksand"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/downbox">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:src="@drawable/user"
                        android:paddingLeft="5dp"
                        android:paddingBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiration Date:"
                            android:textSize="18dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/quicksand"
                            android:paddingTop="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/lmm"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="MM"
                                android:textColorHint="#000"
                                android:inputType="number"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>

                            <EditText
                                android:id="@+id/ldd"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="DD"
                                android:inputType="number"
                                android:textColorHint="#000"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>
                            <EditText
                                android:id="@+id/lyy"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="YY"
                                android:inputType="number"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:textColorHint="#000"
                                android:background="@drawable/blackround"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cam1"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/cameraicon"
                                android:paddingLeft="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Take Photo"
                                android:paddingLeft="15dp"
                                android:paddingTop="15dp"
                                android:textSize="18dp"
                                android:fontFamily="@font/quicksand"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/textviewback"
                android:text="Vehicle Registration"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:paddingTop="7dp"
                android:drawableRight="@drawable/front"
                android:paddingRight="15dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/quicksand"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/downbox">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/car"
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:src="@drawable/car"
                        android:paddingLeft="5dp"
                        android:paddingBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiration Date:"
                            android:textSize="18dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/quicksand"
                            android:paddingTop="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/rmm"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="MM"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:textColorHint="#000"
                                android:inputType="number"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>

                            <EditText
                                android:id="@+id/rdd"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="DD"
                                android:inputType="number"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:textColorHint="#000"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>
                            <EditText
                                android:id="@+id/ryy"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="YY"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:inputType="number"
                                android:textColorHint="#000"
                                android:background="@drawable/blackround"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cam2"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/cameraicon"
                                android:paddingLeft="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Take Photo"
                                android:paddingLeft="15dp"
                                android:paddingTop="15dp"
                                android:textSize="18dp"
                                android:fontFamily="@font/quicksand"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/textviewback"
                android:text="Vehicle Insurance"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:drawableRight="@drawable/front"
                android:paddingRight="15dp"
                android:fontFamily="@font/quicksand"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/downbox">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/book"
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:src="@drawable/book"
                        android:paddingLeft="5dp"
                        android:paddingBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiration Date:"
                            android:textSize="18dp"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/quicksand"
                            android:paddingTop="5dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/imm"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="MM"
                                android:textColorHint="#000"
                                android:inputType="number"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>

                            <EditText
                                android:id="@+id/idd"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="DD"
                                android:inputType="number"
                                android:textColorHint="#000"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:background="@drawable/blackround"/>

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/slash"/>
                            <EditText
                                android:id="@+id/iyy"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="4dp"
                                android:textAlignment="center"
                                android:singleLine="true"
                                android:maxLength="2"
                                android:hint="YY"
                                android:inputType="number"
                                android:textColorHint="#000"
                                android:textCursorDrawable="@drawable/cursorcolour"
                                android:background="@drawable/blackround"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cam3"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/cameraicon"
                                android:paddingLeft="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Take Photo"
                                android:paddingLeft="15dp"
                                android:paddingTop="15dp"
                                android:textSize="18dp"
                                android:fontFamily="@font/quicksand"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_document"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnext"
                android:fontFamily="@font/quicksand"
                android:padding="10dip"
                android:text="Submit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>