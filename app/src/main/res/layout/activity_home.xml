<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".driver.HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:paddingRight="12dp"
            android:src="@drawable/cicon1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="15dp"
                        android:src="@drawable/ricon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="30%"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="$1.30/mi"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="300dp"
            android:layout_gravity="right"
            android:layout_marginTop="135dp"
            android:background="@drawable/back2"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/userpro" />

            <ImageView
                android:id="@+id/iv_bell"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:onClick="onButtonClickbackbell"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/bell" />


            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/calenderdate" />

            <ImageView
                android:id="@+id/iv_cash"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/cashmoney" />

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:onClick="onButtonClickback"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/stara" />

        </LinearLayout>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/building" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lOut"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/back1"
                android:orientation="vertical"
                android:padding="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/reservedLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Reserved"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onlineLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Online"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/liStatusTwo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/red" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liStatusZero"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/yellow" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liStatusOne"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/circled" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/green" />

            </LinearLayout>


            <TextView
                android:id="@+id/goToOnlineTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Go Online"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/goToOfflineTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Go Offline"
                android:textColor="#000"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </FrameLayout>
</fragment>