<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".driver.UpdateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:onClick="onButtonClickback"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Edit Account"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:fontFamily="@font/quicksand_bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_profileimage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/profileicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:fontFamily="@font/quicksand"
                    android:hint="First Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/lock"
                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:textCursorDrawable="@drawable/cursorcolour"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/et_lname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:fontFamily="@font/quicksand"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:drawableRight="@drawable/lock"
                    android:paddingRight="5dp"
                    android:textCursorDrawable="@drawable/cursorcolour"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Email"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/lock"
                android:paddingRight="5dp"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Address"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_apt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Apt.#"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="City"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:fontFamily="@font/quicksand"
                    android:hint="State"
                    android:inputType="text"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textCursorDrawable="@drawable/cursorcolour"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/round"
                    android:fontFamily="@font/quicksand"
                    android:hint="Zip Code"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textCursorDrawable="@drawable/cursorcolour"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/et_mobileno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Mobile Phone Number"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/lock"
                android:paddingRight="5dp"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <!--<EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Password"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />-->


            <!-- <TextView
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/round"
                 android:drawableRight="@drawable/front"
                 android:fontFamily="@font/quicksand"
                 android:padding="10dp"
                 android:paddingRight="10dp"
                 android:text="Select City"
                 android:textColor="#ffffff"
                 android:textSize="16dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_selectcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select City"
                    android:inputType="text"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:background="#000"
                    android:fontFamily="@font/quicksand"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btnOrder"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:background="@drawable/front" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_carimage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/caricon" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp">

                <Spinner
                    android:id="@+id/spn_year"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:background="@null"
                    android:layout_height="match_parent"/>

                <!--<Spinner
                    android:id="@+id/spn_year"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:paddingLeft="20dp"
                    android:popupBackground="#000"
                    android:layout_height="match_parent"/>-->

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/front"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp">

                <Spinner
                    android:id="@+id/spn_carmake"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/front"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp">

                <Spinner
                    android:id="@+id/spn_carmodel"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/front"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp">

                <Spinner
                    android:id="@+id/spn_cartier"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/front"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>


            <EditText
                android:id="@+id/et_licenseplate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="License Plate"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <!-- <EditText
                 android:id="@+id/et_bankname"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/round"
                 android:fontFamily="@font/quicksand"
                 android:hint="Bank Name"
                 android:maxLines="1"
                 android:paddingLeft="20dp"
                 android:paddingRight="10dp"
                 android:singleLine="true"
                 android:textColor="#ffffff"
                 android:textCursorDrawable="@drawable/cursorcolour"
                 android:textSize="16dp" />-->

            <EditText
                android:id="@+id/et_routingno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Routing Number"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_accountno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Account Number"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />

            <!--<EditText
                android:id="@+id/et_verifyno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/quicksand"
                android:hint="Account Number"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursorcolour"
                android:textSize="16dp" />-->


            <Button
                android:id="@+id/btn_profiledetails"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btnupdate"
                android:fontFamily="@font/quicksand_bold"
                android:padding="10dip"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>