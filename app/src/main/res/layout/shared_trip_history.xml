<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Pickup Address "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtPickUpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Drop Address "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtDropAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Sender Name "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtSenderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Rider Name "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtRiderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Pickup Date Time "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtPickupTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="Booking Date Time "
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtBookingDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_below="@+id/tv_9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#a1a1a1" />

</LinearLayout>