<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Pickup Address "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPickUpAddress"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Drop Address "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDropAddress"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Driver Name "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverName"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Car Tier "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCarTier"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Pickup Date Time "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPickUpDateTime"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Fare Amount "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAmount"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/quicksand"/>
    </LinearLayout>

</LinearLayout>