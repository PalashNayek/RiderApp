<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="driver.TranjactionHistoryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:text="Transaction History"/>

        <ImageView
            android:id="@+id/img_back"
            android:onClick="onButtonClick"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/arrow"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Balance :"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$300.00"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="#fff"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:background="@drawable/textviewbackyellow"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Deposit now"
        android:textColor="#000"
        android:textAllCaps="false"
        android:fontFamily="@font/quicksand_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Some Day deposit requires a minimum of $150."
        android:fontFamily="@font/quicksand"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textviewback"
        android:text="Pending Transaction :"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="18dp"
        android:textColor="#fff"
        android:fontFamily="@font/quicksand_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No pending transaction"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="18dp"
        android:textColor="#fff"
        android:fontFamily="@font/quicksand_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/textviewback"
        android:text="Last 5 Posted Transactions"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/front"
        android:paddingRight="15dp"
        android:textColor="#fff"
        android:fontFamily="@font/quicksand_bold"/>


</LinearLayout>