<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@drawable/forgot_pass"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backArrowBtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:singleLine="true"
            app:fontFamily="@font/quicksand_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Enter your email or phone number"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="@font/quicksand_light" />

        <EditText
            android:id="@+id/fp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round3"
            android:hint="Email/Phone"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textColorHint="#ffffff"
            app:fontFamily="@font/quicksand_light"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        style="?android:textAppearanceSmall"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_botton2"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_gravity="center"
        app:fontFamily="@font/quicksand_bold"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter MILES code"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:fontFamily="@font/quicksand_light"/>
        <EditText
            android:id="@+id/Edit_verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:maxLength="4"
            android:textSize="16dp"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Please Enter 4 digit OTP Number"
            android:textColorHint="#ffffff"
            app:fontFamily="@font/quicksand_light"
            android:maxLines="1"/>
    </LinearLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Note: Once code is accepted, notification text will generate instructing the user to check their email for link to reset their pasword"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/quicksand_light"
        android:textSize="12dp"/>-->


</LinearLayout>