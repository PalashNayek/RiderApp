<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_mediumAnimTime" android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:state_hovered="true" >
        <shape>
            <solid
                android:color="#004F81" />
            <stroke
                android:width="0.5dp"
                android:color="#222222" />
            <!--<corners
                android:radius="7dp" />-->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#000"
                android:endColor="#000"
                android:angle="270" />
            <stroke
                android:width="0.25dp"
                android:color="@color/bgColor" />
            <!--<corners
                android:radius="7dp" />-->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>